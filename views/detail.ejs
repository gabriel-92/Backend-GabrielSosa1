<%- include('./partials/head.ejs') %>
    <%- include('./partials/nav.ejs') %>

        <body>
            <div class="col-md-12 mb-5">
                <h2 class="text-center mt-5">
                    Product Detail
                </h2>
            </div>
            <% if (product) { %>
                <div class="container center  mt-5 mb-5">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title fs-2 fw-bold">
                                <%= product.title %>
                            </h5>
                            <p class="card-text fs-3 fw-semibold">
                                <%= product.description %>
                            </p>
                            <p class="card-text fs-3 fw-semibold ">
                                Price : <%= product.price %>
                            </p>
                            <img class="img-thumbnail rounded mx-auto d-block" width="400" src="<%= product.image %> ">
                        </div>
                        <div class=" container mt-5 mb-5 " style="width: 25rem;">
                            <div class="row">
                                <div class="col">
                                    <a href="/update" class="btn btn-primary">Edit</a>
                                </div>
                                <div class=" col">
                                    <form action="/products/<%= product._id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                                <div class="col">
                                    <form action="/" method="GET">
                                        <button href="/" type="submit" class="btn btn-secondary">Back</button>
                                    </form>
                                </div>
                                <div class="col">
                                    <form action="/products/<%= product._id %>/buy" method="POST">
                                        <button type="submit" class="btn btn-success">Buy</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <% } else { %>
                    <div class="container center  mt-5 mb-5">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title fs-2 fw-bold">
                                    Product not found
                                </h5>
                            </div>
                        </div>
                    </div>


                    <% } %>
                        <%- include('./partials/footer.ejs') %>
        </body>

        </html>